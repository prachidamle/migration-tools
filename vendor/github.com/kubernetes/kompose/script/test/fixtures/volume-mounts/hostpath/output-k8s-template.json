              }
            ],
            "containers": [
              {
                "name": "db",
                "image": "postgres:10.1",
                "ports": [
                  {
                    "containerPort": 5432
                  }
                ],
                "resources": {},
                "volumeMounts": [
                  {
                    "name": "db-hostpath0",
                    "mountPath": "/var/lib/postgresql/data"
                  }
                ]
              }
            ],
            "restartPolicy": "Always"
